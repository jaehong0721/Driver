<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="24dp"
              android:layout_marginLeft="19dp"
              android:layout_marginRight="23dp"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="거래처수"
                android:textColor="@color/warm_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvPartnerNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:hint="0개"
                android:textColor="@color/business_info_text_color"
                android:textColorHint="@color/business_info_text_color"
                android:textSize="19sp"/>

            <com.rena21.driver.view.layout.InputInfoLayout
                android:id="@+id/inputPartnerNum"
                android:layout_width="83dp"
                android:layout_height="48dp"
                android:layout_below="@+id/label1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@color/input_text_background"
                android:gravity="center"
                android:hint="0개"
                android:inputType="number"
                android:visibility="gone"
                app:clearable="false"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#14000000"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="주문수"
                android:textColor="@color/warm_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:hint="0개"
                android:textColor="@color/business_info_text_color"
                android:textColorHint="@color/business_info_text_color"
                android:textSize="19sp"/>

            <com.rena21.driver.view.layout.InputInfoLayout
                android:id="@+id/inputOrderNum"
                android:layout_width="83dp"
                android:layout_height="48dp"
                android:layout_below="@+id/label2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@color/input_text_background"
                android:gravity="center"
                android:hint="0개"
                android:inputType="number"
                android:visibility="gone"
                app:clearable="false"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#14000000"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="업력"
                android:textColor="@color/warm_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:hint="0년"
                android:textColor="@color/business_info_text_color"
                android:textColorHint="@color/business_info_text_color"
                android:textSize="19sp"/>

            <com.rena21.driver.view.layout.InputInfoLayout
                android:id="@+id/inputAge"
                android:layout_width="83dp"
                android:layout_height="48dp"
                android:layout_below="@+id/label3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@color/input_text_background"
                android:gravity="center"
                android:hint="0년"
                android:inputType="number"
                android:visibility="gone"
                app:clearable="false"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#14000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">

        <TextView
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주요품목"
            android:textColor="@color/warm_gray"
            android:textSize="12sp"/>

        <com.rena21.driver.view.layout.TagLayout
            android:id="@+id/majorItemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label4"
            android:layout_marginTop="10dp"
            app:flexWrap="wrap"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#14000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">

        <TextView
            android:id="@+id/label5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송지역"
            android:textColor="@color/warm_gray"
            android:textSize="12sp"/>

        <com.rena21.driver.view.layout.TagLayout
            android:id="@+id/deliveryAreasLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label5"
            android:layout_marginTop="10dp"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/tvDeliveryArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="예) 금정동, 팔달동"
                android:textColor="@color/business_info_text_color"
                android:textSize="14sp"/>

        </com.rena21.driver.view.layout.TagLayout>

        <com.rena21.driver.view.layout.InputInfoLayout
            android:id="@+id/inputDeliveryArea"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/label5"
            android:layout_marginTop="10dp"
            android:background="@color/input_text_background"
            android:hint="예) 금정동, 팔달동"
            android:inputType="text"
            android:visibility="gone"
            app:clearable="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#14000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴무일"
                android:textColor="@color/warm_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvClosedDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label6"
                android:layout_marginTop="10dp"
                android:hint="예) 매주 일요일"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <com.rena21.driver.view.layout.InputInfoLayout
                android:id="@+id/inputClosedDay"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:layout_below="@+id/label6"
                android:layout_marginTop="10dp"
                android:background="@color/input_text_background"
                android:hint="예) 매주 일요일"
                android:inputType="text"
                android:visibility="gone"
                app:clearable="false"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#14000000"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/label7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송시간"
                android:textColor="@color/warm_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label7"
                android:layout_marginTop="10dp"
                android:hint="예) 월~토, 9시~8시"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <com.rena21.driver.view.layout.InputInfoLayout
                android:id="@+id/inputDeliveryTime"
                android:layout_width="144dp"
                android:layout_height="48dp"
                android:layout_below="@+id/label7"
                android:layout_marginTop="10dp"
                android:background="@color/input_text_background"
                android:hint="예) 9시~8시"
                android:inputType="text"
                android:visibility="gone"
                app:clearable="false"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="#14000000"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="21dp">

        <TextView
            android:id="@+id/label8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사업자등록번호"
            android:textColor="@color/warm_gray"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvBusinessLicenseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label8"
            android:layout_marginTop="10dp"
            android:hint="예) 123-45-67890"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <com.rena21.driver.view.layout.InputInfoLayout
            android:id="@+id/inputBusinessLicenseNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/label8"
            android:layout_marginTop="10dp"
            android:background="@color/input_text_background"
            android:hint="예) 123-45-67890"
            android:inputType="text"
            android:visibility="gone"
            app:clearable="false"/>
    </RelativeLayout>

</LinearLayout>