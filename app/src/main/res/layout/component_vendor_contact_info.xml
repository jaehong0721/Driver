<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/textBlack"
        android:hint="미리네 식품"/>

    <com.rena21.driver.view.layout.InputInfoLayout
        android:id="@+id/inputVendorName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/input_text_background"
        android:hint="예) 미리네 식품"
        android:inputType="text"
        android:visibility="gone"
        app:clearable="true"/>
    
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/textBlack"
        android:hint="서울 특별시 송파구 삼전동 60-7번지"/>

    <com.rena21.driver.view.layout.InputInfoLayout
        android:id="@+id/inputAddress"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/input_text_background"
        android:hint="예) 서울특별시 송파구 삼전동 60-7번지"
        android:inputType="text"
        android:visibility="gone"
        app:clearable="true"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="9dp"/>

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/textBlack"
        android:hint="010-1234-5678"/>

    <com.rena21.driver.view.layout.InputInfoLayout
        android:id="@+id/inputPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/input_text_background"
        android:hint="예) 010-1234-5678"
        android:inputType="number"
        android:visibility="gone"
        app:clearable="true"/>
</LinearLayout>